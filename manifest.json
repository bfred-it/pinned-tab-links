{
    "manifest_version": 2,
    "name": "Sticky Pinned Tabs",
    "short_name": "Sticky Pinned Tabs",
    "description": "When in a pinned tab, external links open in a new tab",
    "version": "1.1.0",
    "author": "Federico Brigante",
    "permissions": [
        "<all_urls>"
    ],
    "applications": {
        "gecko": {
            "id": "pinnedtablinks@bfred.it",
            "strict_min_version": "45.0"
        }
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}
